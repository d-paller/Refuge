<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">

    <title>@ViewBag.Title</title>
 
    <link rel="stylesheet" href="~/bundles/npmbundle.css">
    <link rel="stylesheet" href="~/bundles/bundle.css" />

</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="~/images/logo-sm.png" width="30" height="30" class="d-inline-block align-top" alt="">
            Refuge Hub
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Sign In", "Index", "SignIn", null, new { @class = "nav-link" })
                </li>

            </ul>

            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })
                </li>

            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()

    </div>
    <script src="~/bundles/npmbundle.js"></script>
    <script src="~/bundles/bundle.js"></script>

</body>
</html>